<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewListSmoke"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/checkMarkViews"
        app:layout_constraintTop_toTopOf="parent" />

    <com.v0lky1.smoketrainer.views.CheckMarkViews
        android:id="@+id/checkMarkViews"
        android:layout_width="43dp"
        android:layout_height="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.v0lky1.smoketrainer.views.ClickCounterView
        android:id="@+id/clickCounterView"
        android:layout_width="37dp"
        android:layout_height="32dp"
        android:text="ClickCounter"
        app:layout_constraintStart_toEndOf="@+id/textViewListSmoke"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>